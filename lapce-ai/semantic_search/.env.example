# AWS Bedrock Configuration (Required for embeddings)
# SECURITY: Never commit actual credentials to version control
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1

# Titan Model Configuration
TITAN_MODEL=amazon.titan-embed-text-v2:0
TITAN_DIMENSIONS=1536  # Production default for titan-embed-text-v2:0

# Optional: Rate limiting
TITAN_MAX_CONCURRENT_REQUESTS=10
TITAN_REQUESTS_PER_SECOND=5

# Optional: Cache configuration
L1_CACHE_SIZE_MB=1
L2_CACHE_SIZE_MB=3
L3_CACHE_SIZE_MB=1000

# Optional: File scanning limits
MAX_FILES_TO_SCAN=50000
IGNORE_HIDDEN_FILES=true

# Index Compaction Configuration
INDEX_COMPACTION_ENABLED=true
INDEX_COMPACTION_INTERVAL=3600  # seconds (default: 1 hour)
INDEX_OPTIMIZATION_THRESHOLD=100  # chunks before optimization
